<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Add this style to your styles.xml file -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item> <!-- Change text color to your preference -->
        <item name="android:textSize">16sp</item> <!-- Change text size to your preference -->
        <item name="android:background">@drawable/spinner_background</item> <!-- Optional: Add custom background drawable -->
    </style>
    <style name="CustomFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">16dp</item> <!-- Adjust margin as needed -->
        <item name="android:elevation">8dp</item> <!-- Adds shadow for a raised look -->
        <item name="rippleColor">@color/colorRipple</item> <!-- Ripple color when clicked -->
        <item name="android:tint">@android:color/white</item> <!-- Icon color -->
    </style>


</resources>