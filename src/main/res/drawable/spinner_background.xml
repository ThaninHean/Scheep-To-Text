<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Set the background color of the spinner -->
        <solid android:color="#FFFFFF" />

        <!-- Optional: Add a border to the spinner -->
        <stroke
            android:width="1dp"
            android:color="#CCCCCC" /> <!-- Change this color to your preference -->

        <!-- Optional: Add rounded corners to the spinner -->
        <corners android:radius="8dp" />

        <!-- Optional: Add padding inside the spinner -->
        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
    </shape>

</item>
</selector>